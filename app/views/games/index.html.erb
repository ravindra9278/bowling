<p id="notice"><%= notice %></p>

<h3 style="text-align: center;">Games Listing</h1>

<%= link_to 'New Game', new_game_path %><hr>

<table class="table table-bordered">
  <thead>
    <tr class="table-secondary">
      <th scope="col">Id</th>
      <th scope="col">Player Count</th>
      <th scope="col">Game Turn</th>
      <th scope="col">Score</th>
      <th scope="col">Winner</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr class="table-secondary">
        <th scope="row"><%= link_to "#{game.id}", game_path(game) -%></th>
        <td><%= link_to "#{game.player_count}", game_path(game) -%></td>
        <td><%= link_to "#{game.game_turn}", game_path(game) -%></td>
        <td><%= link_to "#{get_higest_score game}", game_path(game) -%></td>
        <td><%= link_to "#{get_winner_name game}", game_path(game) -%></td>
      </tr>
    <% end %>
  </tbody>
</table>